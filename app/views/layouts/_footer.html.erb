<footer>
<div class="row">
  <small>
    <% if current_user %>
      <div class="col-md-8">
      Signed in as <%= current_user.full_name %> | <%= link_to "Log out", session_path, method: :delete %>
      </div>
      <% if current_user.admin? %>
      <div class="col-md-4 text-right">
        <%= link_to "Admin Panel", admin_users_path %>
      </div>
      <% end %>
    <% else %>
      <div class="col-md-8">
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
      </div>
    <% end %>
  </small>    
</div>




</footer>