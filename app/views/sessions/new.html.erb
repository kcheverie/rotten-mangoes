<h2>Log In</h2>
<div class="form-horizontal">
<%= form_tag sessions_path do %>
  <div class="form-group">
      <%= label_tag :email, "Email",class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= text_field_tag :email, "", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
      <%= label_tag :password, "Password", class: "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= submit_tag "Log In", class: "btn btn-custom" %>
    </div>
  </div>
<% end %>
</div>