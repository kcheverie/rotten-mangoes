<h2>Users</h2>
<div class="row">
  <div class="col-md-12 text-right">
    <%= link_to "Add User", new_admin_user_path, class: "btn btn-custom"%>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th nowrap>Name</th>
      <th>Email</th>
      <th>Signup Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td nowrap><%= link_to user.full_name, admin_user_path(user) %></td>
    <td><%=user.email%></td>
    <td nowrap><%=formatted_date(user.created_at)%></td>
    <td>
      <% if user.admin? %>
      <p class="text-success">Admin</p>
      <% end %>
    </td>
    <td><%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-default"%></td>
    <td><%= link_to "X", admin_user_path(user), method: :delete, data: {confirm: "You sure?"}, class: "btn btn-danger"%></td>
  </tr>
  <% end %>    
  </tbody>
</table>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8 text-center">
   <%= paginate @users %>
  </div>
  <div class="col-md-2"></div>
</div>


