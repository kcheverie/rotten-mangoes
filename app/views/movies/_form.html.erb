<%= form_for @movie, html: { class: 'form-horizontal' } do |f| %>
  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, :class => "control-label col-sm-4" %>
    <div class="col-sm-8">
     <%= f.text_field :title, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :release_date, :class => "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.date_field :release_date, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :director, :class => "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.text_field :director, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :runtime_in_minutes, :class => "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.number_field :runtime_in_minutes, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :poster_image_url, :class => "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.text_field :poster_image_url, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "control-label col-sm-4" %>
    <div class="col-sm-8">
      <%= f.text_area :description, class: 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
  <div class="col-sm-offset-4 col-sm-8">
    <%= f.submit "Submit", :class => "btn btn-custom"%> 
  </div>
  </div>
<% end %>